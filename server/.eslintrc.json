{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["standard"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "comma-dangle": "off",
    "linebreak-style": 0,
    "require-jsdoc": "off",
    "semi": [2, "always"]
  }
}
